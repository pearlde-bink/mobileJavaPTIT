<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="215dp"
        android:layout_height="220dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:contentDescription="Tablet image"
        android:scaleType="fitCenter"
        android:src="@drawable/tablet"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="190dp"
        tools:ignore="MissingConstraints"
        ></ImageView>

    <TextView
        android:id="@+id/price"
        android:text="Price: 1000$"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/gray"
        app:layout_constraintLeft_toRightOf="@id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:id="@+id/description"
        app:layout_constraintTop_toBottomOf="@+id/price"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        android:layout_marginTop="50dp"
        android:textColor="@color/gray"
        android:text="Transparent Images, vectors, and clipart for personal or non-commercial projects. Ideal for any design or creative projects."
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        ></TextView>


        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="100dp"
            android:background="@color/red"
            android:text="Home"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            tools:layout_editor_absoluteX="10dp"
            tools:ignore="MissingConstraints"></Button>

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:background="@color/gray"
            android:text="Buy now"
            app:layout_constraintLeft_toRightOf="@+id/btn1"
            app:layout_constraintTop_toTopOf="@+id/btn1"></Button>

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:layout_marginHorizontal="50dp"
            android:text="Detail"
            app:layout_constraintLeft_toRightOf="@+id/btn2"
            app:layout_constraintTop_toTopOf="@+id/btn1"></Button>


</androidx.constraintlayout.widget.ConstraintLayout>